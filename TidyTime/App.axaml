<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:TidyTime"
             x:Class="TidyTime.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://TidyTime/Assets/Styles/TabStyles.axaml"/>
        <StyleInclude Source="avares://TidyTime/Assets/Styles/Inputs.axaml"/>
    </Application.Styles>
    
    <Application.Resources>
        <FontFamily x:Key="ComfortaaRegular">
            avares://TidyTime/Assets/Fonts/Comfortaa-Regular.ttf#Comfortaa
        </FontFamily>
        <FontFamily x:Key="ComfortaaBold">
            avares://TidyTime/Assets/Fonts/Comfortaa-Bold.ttf#Comfortaa
        </FontFamily>
        <FontFamily x:Key="ComfortaaMedium">
            avares://TidyTime/Assets/Fonts/Comfortaa-Medium.ttf#Comfortaa
        </FontFamily>
    </Application.Resources>
</Application>