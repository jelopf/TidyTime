<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Все TabItem -->
    <Style Selector="TabItem">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="FontFamily" Value="Comfortaa"/>
        <Setter Property="FontWeight" Value="500"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        
    </Style>

    <!-- Активная вкладка -->
    <Style Selector="TabItem:selected">
        <Setter Property="Background" Value="#FFFFFF"/>

    </Style>

    <!-- контейнер заголовков -->
    <Style Selector="TabItem">
        <Setter Property="Background" Value="#A6DF80"/>
        <Setter Property="Height" Value="41.75"/>
        <Setter Property="CornerRadius" Value="16, 16, 0, 0"/>
    </Style>

    <Style Selector="TabControl">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="ItemsPanel">
                <ItemsPanelTemplate>
                    <UniformGrid Columns="{Binding $parent[TabControl].Items.Count}"/>
                </ItemsPanelTemplate>
            </Setter>
    </Style>
</Styles>
